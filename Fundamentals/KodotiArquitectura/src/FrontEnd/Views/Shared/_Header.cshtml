<div class="container">
    <header>
        <nav class="navbar">
            <div class="navbar-brand">
                <a class="navbar-item" href="~/">
                    <img src="~/images/logo.png" />
                </a>
                <a class="navbar-item text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="navbar-item text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="navbar-item has-dropdown is-hoverable">
                            <a class="navbar-link">
                                <span class="icon">
                                    <i class="fa fa-user"></i>
                                </span>
                                <span>@User.Identity.Name</span>
                            </a>
                            <div class="navbar-dropdown is-boxed">
                                <a class="navbar-item" asp-controller="User" asp-action="Index">
                                    Mi información
                                </a>
                                <a class="navbar-item" asp-controller="Account" asp-action="Logout">
                                    <span class="icon">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </span>
                                    <span>Finalizar sesión</span>
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-item">
                            <div class="buttons">
                                <a class="button is-primary" asp-controller="Account" asp-action="Index">
                                    <strong>Ingresar</strong>
                                </a>
                                <a class="button is-light" asp-controller="Account" asp-action="NewUser">
                                    <strong>Registrarse</strong>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
</div>