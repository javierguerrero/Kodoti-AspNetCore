@model DtoLayer.UserGetDto;
@{
    ViewData["Title"] = "Información personal";
}

<h1 class="tile">@ViewData["Title"]</h1>
<h2 class="subtitle">Desde aquí puede actualizar su información</h2>

<form asp-controller="User" asp-action="Update">

    <div class="field">
        <label class="label">Email</label>
        <div class="control has-icons-left has-icons-right">
            <input asp-for="Email" class="input" type="email" placeholder="Correo electrónico" disabled />
            <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
            </span>
        </div>
    </div>

    <div class="field">
        <label class="label">Nombre</label>
        <div class="control">
            <input asp-for="FirstName" class="input" type="text" placeholder="Nombre" />
        </div>
    </div>

    <div class="field">
        <label class="label">Apellidos</label>
        <div class="control">
            <input asp-for="LastName" class="input" type="text" placeholder="Apellidos" />
        </div>
    </div>

    <div class="field is-grouped">
        <button type="submit" class="button is-link">Actualizar</button>
        <a href="~/" class="button is-text">Cancelar</a>
    </div>

</form>